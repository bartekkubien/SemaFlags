@model SemaFlags.Models.Node

@{
    ViewData["Title"] = "Edit node details";
}


<form asp-action="Edit" method="post">
    <div asp-validation-summary="All"></div>
    <p>
        <label asp-for="Name">Node name:</label>
        <input asp-for="Name" />
    </p>
    <p>
        <label asp-for="Description">Node description:</label>
        <input asp-for="Description" />
    </p>
    
    <button type="submit">Apply</button>
</form>
