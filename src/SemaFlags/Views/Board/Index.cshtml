@model IEnumerable<SemaFlags.Models.Group>

@{
    ViewData["Title"] = "Board details";
}

<p>
    <label >Board: @ViewBag.Name</label>

</p>
<p>
    <label >@ViewBag.Description</label>
</p>
<a asp-action="Add" asp-controller="Group" asp-route-id="@ViewBag.Id">Add group</a>
<p>
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Description</th>
            </tr>
        </thead>
        <tbody>
            @foreach (SemaFlags.Models.Group g in Model)
            {
                <tr>
                    <td>@g.Id</td>
                    <td><a asp-action="Index" asp-controller="Group" asp-route-id=@g.Id>@g.Name</a></td>
                    <td>@g.Description</td>
                    <td>
                        <a asp-action="Edit" asp-controller="Group" asp-route-id=@g.Id>Edit</a>
                        <a asp-action="Delete" asp-controller="Group" asp-route-id=@g.Id>Delete</a>

                    </td>
                </tr>
            }
        </tbody>
    </table>
    <a asp-action="Index" asp-controller="Home">List of boards.</a>
</p>

