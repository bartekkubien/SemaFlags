@model SemaFlags.Models.Board

@{
    ViewData["Title"] = "Edit board details";
}


<form asp-action="Edit" method="post">
    <div asp-validation-summary="All"></div>
    <p>
        <label asp-for="Name">Board name:</label>
        <input asp-for="Name" />
    </p>
    <p>
        <label asp-for="Description">Board description:</label>
        <input asp-for="Description" />
    </p>
    <button type="submit">Apply</button>
</form>
