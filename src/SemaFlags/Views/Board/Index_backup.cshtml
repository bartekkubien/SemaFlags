@model SemaFlags.ViewModels.GroupView

@{
    ViewData["Title"] = "Board details";
}

<p>
    <label>Board: @ViewBag.Name</label>

</p>
<p>
    <label>@ViewBag.Description</label>
</p>
<a asp-action="Add" asp-controller="Group" asp-route-id="@ViewBag.Id">Add group</a>
<p>

    @foreach (SemaFlags.Models.Group g in Model.Groups)
            {
        @g.Name
        <table class="table table-striped table-bordered">
            <tbody>
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Description</th>
                </tr>
            </thead>
            @foreach (SemaFlags.Models.Node n in Model.Nodes)
                {
                @if (n.GroupId == g.Id)
                    {
                    <tr>
                        <td>@n.Id</td>
                        <td><a asp-action="Index" asp-controller="Node" asp-route-id=@n.Id>@n.Name</a></td>
                        <td>@n.Description</td>
                        <td>
                            <a asp-action="Edit" asp-controller="Node" asp-route-id=@n.Id>Edit</a>
                            <a asp-action="Delete" asp-controller="Node" asp-route-id=@n.Id>Delete</a>
                        </td>
                    </tr> }
            }
            </tbody>
        </table>
    }

    <a asp-action="Index" asp-controller="Home">List of boards.</a>
</p>

