@model IEnumerable<SemaFlags.Models.Board>

@{
    ViewData["Title"] = "Home Page";
}


<p>
    <p>
        <a asp-action="Index" asp-controller="Board">Add board</a>
    </p>
    <p>Board list:</p>
    <p>
        <table class="table table-striped table-bordered" >
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Description</th>
                </tr>
            </thead>
            <tbody>
                @foreach (SemaFlags.Models.Board b in Model)
            {
                    <tr>
                        <td>@b.Id</td>
                        <td>@b.Name</td>
                        <td>@b.Description</td>
                        <td>
                            <a asp-action="Edit" asp-controller="Board" asp-route-id=@b.Id>Edit</a>
                            <a asp-action="Delete" asp-controller="Board" asp-route-id=@b.Id>Delete</a>

                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </p>

</div>
