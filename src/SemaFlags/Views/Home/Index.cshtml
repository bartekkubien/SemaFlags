@model IEnumerable<SemaFlags.Models.Board>


@{
    ViewData["Title"] = "Home Page";
}

<div class="bg-primary panel-body"><h4>Board list</h4></div><br />

    <p>
        <a asp-action="Add" asp-controller="Board"><span class="glyphicon glyphicon-plus"></span><b> Add board</b></a>
    </p>
   
    <p>
        <table class="table table-striped table-bordered" >
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Description</th>
                </tr>
            </thead>
            <tbody>
                @foreach (SemaFlags.Models.Board b in Model)
            {
                    <tr>
                        <td>@b.Id</td>
                        <td><a asp-action="Index" asp-controller="Board" asp-route-id=@b.Id>@b.Name</a></td>
                        <td>@b.Description</td>
                        <td>
                            @if (b.BoardOwnerId.ToString() == User.Claims.FirstOrDefault(c => c.Type == System.Security.Claims.ClaimTypes.NameIdentifier).Value)  {
                                <a asp-action="Edit" asp-controller="Board" asp-route-id=@b.Id><span class="glyphicon glyphicon-edit"></span></a>
                                <a asp-action="Delete" asp-controller="Board" asp-route-id=@b.Id><span class="glyphicon glyphicon-remove"></span></a>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
   


