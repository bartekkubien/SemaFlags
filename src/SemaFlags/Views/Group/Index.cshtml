@model IEnumerable<SemaFlags.Models.Node>

@{
    ViewData["Title"] = "Group details";
}

<p>
    <label>Group: @ViewBag.Name</label>

</p>
<p>
    <label>@ViewBag.Description</label>
</p>

<p>
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Description</th>
            </tr>
        </thead>
        <tbody>
            @foreach (SemaFlags.Models.Node n in Model)
            {
                <tr>
                    <td>@n.Id</td>
                    <td><a asp-action="Index" asp-controller="Node" asp-route-id=@n.Id>@n.Name</a></td>
                    <td>@n.Description</td>
                    <td>
                        <a asp-action="Edit" asp-controller="Node" asp-route-id=@n.Id>Edit</a>
                        <a asp-action="Delete" asp-controller="Node" asp-route-id=@n.Id>Delete</a>

                    </td>
                </tr>
            }
        </tbody>
    </table>
    <a asp-action="Index" asp-controller="Board" asp-route-id=@ViewBag.Id>List of groups.</a>
</p>

