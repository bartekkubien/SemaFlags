@model SemaFlags.Models.Group

@{
    ViewData["Title"] = "Group details";
}



<p>
    <label asp-for="Name">@Model.Name</label>

</p>
<p>
    <label asp-for="Description">@Model.Description</label>
</p>

<p>
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Description</th>
            </tr>
        </thead>
        <tbody>
            @foreach (SemaFlags.Models.Node g in Model.Nodes)
            {
                <tr>
                    <td>@g.Id</td>
                    <td><a asp-action="Index" asp-controller="Group" asp-route-id=@g.Id>@g.Name</a></td>
                    <td>@g.Description</td>
                    <td>
                        <a asp-action="Edit" asp-controller="Group" asp-route-id=@g.Id>Edit</a>
                        <a asp-action="Delete" asp-controller="Group" asp-route-id=@g.Id>Delete</a>

                    </td>
                </tr>
            }
        </tbody>
    </table>
    <a asp-action="Index" asp-controller="Home">List of boards.</a>
</p>

